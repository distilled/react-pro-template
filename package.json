{
  "name": "react-pro-template",
  "author": "@distilled",
  "version": "1.0.0",
  "description": "Working React Project Template with TypeScript, Unit Testing, WebPack and SASS",
  "main": "src/index.tsx",
  "scripts": {
    "app-start": "webpack-cli serve --mode=development --env development --open --hot",
    "app-build": "webpack --mode=production --env production --progress",
    "lint-run": "eslint src/**/*.{ts,tsx}",
    "lint-fix": "eslint src/**/*.{ts,tsx} --fix",
    "test-run": "npx jest",
    "test-watch": "npx jest --watchAll",
    "npm-install": "npm install --log-level=error --legacy-peer-deps"
  },
  "keywords": [
    "create-react-app",
    "typescript",
    "webpack",
    "sass"
  ],
  "license": "ISC",
  "dependencies": {
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "html-webpack-plugin": "^5.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^29.1.1",
    "@types/node": "^18.7.23",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/webpack": "^5.28.0",
    "@types/webpack-dev-server": "^4.7.2",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "babel-preset-es2015": "^6.24.1",
    "enhanced-resolve": "^5.10.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.1.2",
    "node-sass": "^7.0.3",
    "prettier": "^2.7.1",
    "react-scripts-ts": "^3.1.0",
    "sass-loader": "^13.0.2",
    "style-loader": "^3.3.1",
    "ts-jest": "^29.0.3",
    "ts-jest-resolver": "^2.0.0",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  }
}
